
<a href="/games" class = 'button'>Go Back</a>

<h1 class = 'title'><%= game.title %></h1>


<br>


<div class = 'gameInfo'>
    <form action="/games/<%= game._id %>?_method=DELETE" method="POST" id ='removeBtn'>
        <input type="submit" value="Remove" id="removeBtn" class = 'warnBtn'>
      </form>
    <a href="/games/edit/<%=game._id %>" class = 'button' id="editGame">Edit Game</a>
    <a href="/games/<%=game._id %>/review" class = 'button' id="reviewGame">Leave a new review</a>
    <img src="<%= game.img%>" alt="<%= game.title %>" id="gameImg">
    <p id="gameDescrip"> <span>About: </span><%= game.description %> <br> <span>ESRB Rating: <%= game.rating %></span> </p>
</div>

<h2 class="title">Reviews</h2>

<div class = 'reviews'>
    <ul class = 'reviewList'>
        <% for (let i = 0; i < game.reviews.length; i++){ %>
            <li class = 'review'>
                <div class = 'rTitle'><%= game.reviews[i].title %></div>
                <div class = 'rScore'> Score: <%= game.reviews[i].score%></div>
                <div class = 'rBody'><%= game.reviews[i].body%></div>
                <div class = 'reviewer dim'> Reviewed by: <%= game.reviews[i].reviewer %> </div>
            </li>
        <% }  %>
    </ul>
</div>