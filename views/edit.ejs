<form action="/games/edit/<%=game._id%>/?_method=put" method='POST'>
    <label for="title">Title:</label>
    <input type="text" name='title' value= '<%= game.title %>'>

    <label for="description">Give a brief description:</label>
    <textarea type="text" name="description" rows="5", cols="100"><%= game.description %></textarea>

    <label for="rating">What is the ERSB rating?</label>
    <input type="text" name="rating"value= '<%= game.rating %>'>

    <label for="img">Go grab an image url and paste it here:</label>
    <input type="text" name="img" value ='<%= game.img %>'>
    
    <input type="submit">
    <a href="/games/<%=game._id %>">Cancel</a>
</form>